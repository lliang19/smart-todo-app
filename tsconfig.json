{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "package.json"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "babel.config.js",
  ]
}
